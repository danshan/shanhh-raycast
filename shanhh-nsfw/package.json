{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shanhh-nsfw",
  "title": "Shanhh NSFW",
  "description": "ShanHH NSFW toolbox.",
  "icon": "command-icon.png",
  "author": "danshan",
  "owner": "shanhh",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "ShanHH NSFW",
      "description": "ShanHH NSFW toolbox.",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "search-javbus-list",
      "title": "Search JavBus list",
      "description": "Search JAV from javbus website."
    },
    {
      "name": "get-javbus-detail",
      "title": "Get Jav detail by url",
      "description": "Get JAV detail from javbus website with detail page url."
    },
    {
      "name": "search-javbus-magnet-list",
      "title": "Search JavBus magnet list",
      "description": "Search JAV magnet list from javbus website with detail page url and magnet search page url."
    }
  ],
  "preferences": [
    {
      "name": "btsowHost",
      "type": "textfield",
      "title": "Btsow Site",
      "description": "input site name, all available sites are listed below or check in https://tellme.pw/btsow.",
      "placeholder": "e.g. https://btsow.com/",
      "link": "https://tellme.pw/btsow",
      "required": true,
      "default": "https://btsow.motorcycles"
    },
    {
      "name": "javbusHost",
      "type": "textfield",
      "title": "JavBus Site",
      "description": "input site name.",
      "placeholder": "https://www.javbus.com",
      "required": true,
      "default": "https://www.javbus.com"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.2",
    "@raycast/utils": "^1.19.1",
    "crypto-js": "^4.2.0",
    "got": "^14.4.6",
    "node-html-parser": "^6.1.13",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/crypto-js": "^4.2.2",
    "@types/got": "^9.6.12",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
