{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "shanhh-feishu",
  "title": "Shanhh Feishu",
  "description": "Toolbox for feishu application.",
  "icon": "extension-icon.png",
  "author": "danshan",
  "owner": "shanhh",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Shanhh Feishu",
      "description": "Feishu tools",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "feishuAppId",
      "type": "textfield",
      "title": "App Id",
      "description": "input app id.",
      "placeholder": "e.g. cli_a1234567890",
      "required": true,
      "default": ""
    },
    {
      "name": "feishuAppSecret",
      "type": "textfield",
      "title": "App Secret",
      "description": "input app secret.",
      "placeholder": "e.g. 1234567890",
      "required": true,
      "default": ""
    },
    {
      "name": "feishuTokenFile",
      "type": "file",
      "title": "Token File",
      "description": "input token file.",
      "placeholder": "e.g. token.txt",
      "required": true,
      "default": ""
    }
  ],
  "tools": [
    {
      "name": "send-feishu-message",
      "title": "Send Feishu Message",
      "description": "Send feishu message"
    }
  ],
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.45.0",
    "@raycast/api": "^1.94.0",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
